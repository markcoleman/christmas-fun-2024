{
    "name": "my-christmas-project",
    "version": "1.0.0",
    "type": "module",
    "description": "An unusual, software-engineer-themed telling of the night before Christmas",
    "main": "index.js",
    "scripts": {
        "prepare": "npx husky-init && husky install",
        "start": "node index.js",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=lcov --reporters=default --reporters=jest-junit"
    },
    "jest-junit": {
        "outputDirectory": "test-results",
        "outputName": "jest-junit.xml"
    },
    "keywords": [
        "Christmas",
        "Node.js",
        "Software Engineer",
        "DevContainer"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.4.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "eslint": "^9.18.0",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^15.4.1",
        "prettier": "^3.4.2"
    },
    "lint-staged": {
        "*.{js,jsx,mjs,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,html,md}": [
            "prettier --write"
        ]
    }
}
