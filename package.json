{
    "name": "my-christmas-project",
    "version": "1.0.0",
    "type": "module",
    "description": "An unusual, software-engineer-themed telling of the night before Christmas",
    "main": "index.js",
    "scripts": {
        "build": "tsc && copyfiles story.*.json dist",
        "start": "npm run build && node dist/index.js",
        "test": "vitest --run --coverage"
    },
    "keywords": [
        "Christmas",
        "Node.js",
        "Software Engineer",
        "DevContainer"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.4.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@vitest/coverage-v8": "^3.0.5",
        "copyfiles": "^2.4.1",
        "eslint": "^9.20.1",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "vitest": "^3.0.3"
    },
    "lint-staged": {
        "*.{js,jsx,mjs,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,html,md}": [
            "prettier --write"
        ]
    }
}
